@page "/"
@inject NavigationManager Nav

<MudContainer MaxWidth="false" Class="landing-hero text-center">
    <MudText Typo="Typo.h2">Welcome to MudBlazor Ecommerce</MudText>
    <MudText Typo="Typo.subtitle1" Class="mb-8">Find your favorite products and enjoy fast delivery.</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => Nav.NavigateTo("products"))">
        Shop Now
    </MudButton>
</MudContainer>

<MudContainer Class="features-section">
    <MudGrid>
        <MudItem xs="12" md="4">
            <MudPaper Class="pa-6 text-center" Elevation="2">
                <MudIcon Icon="@Icons.Material.Filled.LocalShipping" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.h6" Class="mt-4">Fast Delivery</MudText>
                <MudText>Get your orders quickly.</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudPaper Class="pa-6 text-center" Elevation="2">
                <MudIcon Icon="@Icons.Material.Filled.Lock" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.h6" Class="mt-4">Secure Payment</MudText>
                <MudText>Your transactions are safe.</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudPaper Class="pa-6 text-center" Elevation="2">
                <MudIcon Icon="@Icons.Material.Filled.Star" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.h6" Class="mt-4">Top Quality</MudText>
                <MudText>Only the best products.</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

